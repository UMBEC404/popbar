{
  "manifest_version": 3,
  "name": "Popbar",
  "description": "A macOS-style sidebar for search, AI search, and terminal mode, triggered by Ctrl+Shift+S.",
  "version": "0.0.1",
  "action": {
    "default_title": "Popbar"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "http://localhost:4000/"
  ],
  "host_permissions": [
    "http://localhost:4000/*"
  ],
  "content_security_policy": {
  "extension_pages": "script-src 'self'; object-src 'self'; connect-src http://localhost:4000"
 },
  "background": {
    "service_worker": "service-worker-loader.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "js": [
        "assets/content-script.tsx-CAk1saNH.js"
      ],
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_idle",
      "css": [
        "assets/content-script-BsIoVbC-.css"
      ]
    }
  ],
  "commands": {
    "toggle_popbar": {
      "suggested_key": {
        "default": "Ctrl+Shift+S"
      },
      "description": "Toggle the Popbar overlay"
    }
  },
  "web_accessible_resources": [
    {
      "matches": [
        "<all_urls>"
      ],
      "resources": [
        "assets/content-script.tsx-CAk1saNH.js"
      ],
      "use_dynamic_url": false
    }
  ]
}
